<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/reglages"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="@color/purple_500"
        android:textColor="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:text=" Réglages"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/Profil"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@color/purple_700">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/ic_profil"
            android:layout_marginTop="5dp"
            android:text=" Profil"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Nom_Utilisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Tapez votre nom"
            android:textColorHint="@color/white"
            android:inputType="text" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/Apropos"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@color/purple_700">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_apropos"
            android:layout_marginTop="5dp"
            android:text=" A propos de ESIEE Event"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/Apropos_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@color/purple_700">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="27dp"
            android:textStyle="italic"
            android:text=" L'application ESIEE Event a pour but de réunir l'ensemble des informations concernant les évènements associatifs de l'école. Plus besoin de chercher : elles sont désormais entre vos mains dès que vous le souahitez !"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </FrameLayout>
</LinearLayout>
